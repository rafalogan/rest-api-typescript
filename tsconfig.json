{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node"
		],
		"strict": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false
	},
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
