{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"typeRoots": [
			"./node_modules/@types"
		],
		"exclude": [
			"**/*.test.ts",
			"**/*.test.js"
		],
		"types": [
			"node"
		],
		"strict": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true
	}
}
